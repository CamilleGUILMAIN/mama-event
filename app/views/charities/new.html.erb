<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header text-center bg-primary text-white">
      <h2>Create a New Charity</h2>
    </div>
    <div class="card-body">
      <% if @charity.errors.any? %>
        <div class="alert alert-danger">
          <h4>There were errors with your submission:</h4>
          <ul>
            <% @charity.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= simple_form_for @charity, html: { class: "needs-validation" } do |f| %>
        <div class="mb-3">
          <%= f.input :name, label: "Charity Name", required: true, input_html: { class: "form-control" } %>
        </div>

        <div class="mb-3">
          <%= f.input :description, as: :text, label: "Description", input_html: { rows: 5, class: "form-control" } %>
        </div>

        <div class="mb-3">
          <%= f.input :logo, label: "Logo URL", required: false, input_html: { class: "form-control", placeholder: "Enter logo URL" } %>
        </div>

        <div class="mb-3">
          <%= f.input :contact_email, as: :email, label: "Contact Email", required: true, input_html: { class: "form-control", placeholder: "Enter contact email" } %>
        </div>

        <div class="mb-3">
          <%= f.input :phone_number, as: :tel, label: "Phone Number", required: false, input_html: { class: "form-control", placeholder: "Enter phone number" } %>
        </div>

        <div class="d-flex justify-content-between">
          <%= link_to "Cancel", charities_path, class: "btn btn-secondary" %>
          <%= f.button :submit, "Create Charity", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
